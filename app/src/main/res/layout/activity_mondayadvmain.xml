<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmain"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/title_background"
                android:gravity="center"
                android:text="Chest"
                android:textAlignment="center"
                android:textColor="@color/yellow"
                android:textSize="40dp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_border"
                    android:gravity="center"
                    android:text="1.Bench Press"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 1 : 15 Repetition"
                        android:textSize="20dp"
                        android:textColor="@color/b"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 2 : 12 Repetition"
                        android:textSize="20dp"
                        android:textColor="@color/b"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 3 : 10 Repetition"
                        android:textSize="20dp"
                        android:textColor="@color/b"
                        android:textStyle="bold" />
                </LinearLayout>

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="200dp"
                    android:id="@+id/benchpress"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:src="@drawable/benchpress" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_border"
                    android:gravity="center"
                    android:text="2.Inclined Bench Press"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 1 : 15 Repetition"
                        android:textSize="20dp"
                        android:textColor="@color/b"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 2 : 12 Repetition"
                        android:textSize="20dp"
                        android:textColor="@color/b"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 3 : 10 Repetition"
                        android:textSize="20dp"
                        android:textColor="@color/b"
                        android:textStyle="bold" />
                </LinearLayout>

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="200dp"
                    android:id="@+id/inclinedBenchpress"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:src="@drawable/inclinedbenchpressmain" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_border"
                    android:gravity="center"
                    android:text="3.Declined Bench Press"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 1 : 15 Repetition"
                        android:textSize="20dp"
                        android:textColor="@color/b"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 2 : 12 Repetition"
                        android:textSize="20dp"
                        android:textColor="@color/b"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 3 : 10 Repetition"
                        android:textSize="20dp"
                        android:textColor="@color/b"
                        android:textStyle="bold" />
                </LinearLayout>

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:id="@+id/declinedBenchPress"
                    android:src="@drawable/barebelldeclinebench" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_border"
                    android:gravity="center"
                    android:text="4.Inclined Dumbbell Fly"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 1 : 15 Repetition"
                        android:textSize="20dp"
                        android:textColor="@color/b"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 2 : 12 Repetition"
                        android:textSize="20dp"
                        android:textColor="@color/b"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 3 : 10 Repetition"
                        android:textSize="20dp"
                        android:textColor="@color/b"
                        android:textStyle="bold" />
                </LinearLayout>

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/inclinedDumbbellFly"
                    android:gravity="center"
                    android:src="@drawable/inclineddumbbellflymain" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_border"
                    android:gravity="center"
                    android:text="5.Cross Cable"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 1 : 15 Repetition"
                        android:textSize="20dp"
                        android:textColor="@color/b"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 2 : 12 Repetition"
                        android:textSize="20dp"
                        android:textColor="@color/b"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set 3 : 10 Repetition"
                        android:textSize="20dp"
                        android:textColor="@color/b"
                        android:textStyle="bold" />
                </LinearLayout>

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="200dp"
                    android:id="@+id/crossCable"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:src="@drawable/crosscableborder" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>