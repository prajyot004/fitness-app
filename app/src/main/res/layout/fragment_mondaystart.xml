<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mondaystart"
    android:background="@drawable/backgroundmain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgroundmain">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.Jumping Jack"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:textStyle="bold"
                    android:background="@drawable/text_border"/>


                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="354dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:src="@drawable/jumpstart" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.Wrist Rotation"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:textStyle="bold"
                    android:background="@drawable/text_border"/>


                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="362dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:src="@drawable/wristwworkout" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3.Arm Spinning"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:textStyle="bold"
                    android:background="@drawable/text_border"/>


                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:src="@drawable/armspinningstart" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4.Pushups"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:textStyle="bold"
                    android:background="@drawable/text_border"/>


                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:src="@drawable/pushupstart" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:background="@drawable/swipleft"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Swip Left For Main workout"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="40dp"
                    android:textStyle="bold"
                    android:background="@drawable/text_border"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>